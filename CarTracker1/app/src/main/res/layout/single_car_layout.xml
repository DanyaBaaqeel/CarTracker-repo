<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/car_layout"
    android:padding="10dp"
    android:clickable="true"
    android:layout_height="wrap_content"
    android:background="#f5f5f5"
    android:layout_margin="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:id="@+id/car_number"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:text=" Car number : 50000"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textColor="#cacaca"

        android:textSize="16sp"
        android:text=" Car Details :"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:id="@+id/car_details"
        android:textColor="#000"

        android:textSize="14sp"
        android:text=" Car Details :\r\n Hello"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:id="@+id/car_owner"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"

        android:textSize="16sp"
        android:text=" Owner's name : "/>
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/car_driver"
        android:textColor="#ff6600"
android:textStyle="italic"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textSize="16sp"
        android:text=" Current driver : "/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="12sp"
        android:id="@+id/delete_car"
        android:text="remove this car"
        />

</LinearLayout>